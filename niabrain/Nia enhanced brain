│   ├── memory.py             # Semantic vector DB (Pinecone) + self-pruning
│   ├── tooling.py            # Dynamic tool registry + quantum tools
│   ├── execution.py          # Async executor with guardrails
│   └── self_improvement.py   # Recursive loops + PR generation
├── mcp/                      # MCP Servers
│   ├── finance_bridge.py     # BRICS/BTC stubs
│   ├── security_monitor.py   # Threat intel stubs
│   └── trust_registry.py     # Compliance ledger
├── observability/            # Monitoring layer
│   ├── telemetry.py          # WebSocket real-time
│   ├── trace_viz.py          # Reasoning trace visualization
│   └── monitoring.py         # Prometheus + Grafana stubs
├── vault/                    # Air-gapped vault
│   ├── crypto.py             # AES-256-GCM + MPC stubs
│   └── offline_signing.py    # Offline node stubs
├── hosting/                  # Singapore VPS pattern
│   ├── Dockerfile            # Containerization
│   ├── docker-compose.yml    # Orchestration
